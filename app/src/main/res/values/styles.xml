<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RippleButton" parent="Widget.AppCompat.Button.Borderless"/>

    <style name="WhiteButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/deep_sky_blue</item>
        <item name="colorButtonNormal">@color/white</item>
    </style>

    <style name="MainButton" parent="Theme.AppCompat.Light">
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:theme">@style/WhiteButton</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="OutlineBlueButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:paddingLeft">48dp</item>
        <item name="android:paddingRight">48dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/shape_outline_blue</item>
        <item name="android:textColor">@color/curious_blue</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="White" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="WhiteEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="BlueEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/curious_blue</item>
        <item name="colorControlActivated">@color/curious_blue</item>
    </style>

    <style name="BlueRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/curious_blue</item>
        <item name="colorControlActivated">@color/curious_blue</item>
    </style>

</resources>
